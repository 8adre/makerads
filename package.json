{
  "name": "makerads",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.2.3",
    "@pm2/io": "^2.4.7",
    "airtable": "^0.5.8",
    "date-fns": "^1.30.1",
    "express": "^4.16.4",
    "getconfig": "^4.5.0",
    "helmet": "^3.15.0",
    "mongodb": "^3.1.10",
    "request": "^2.88.0"
  },
  "scripts": {
    "scp": "scp makerads.tar.gz staging:/var/www/makerads",
    "tar": "tar cf makerads.tar.gz client/{dist,index.html,package.json,images} build config index.js package.json",
    "deploy": "npm run build && npm run tar && npm run scp",
    "build": "babel -d ./build ./server",
    "dev": "NODE_ENV=development node --inspect index.js",
    "seed": "NODE_ENV=development babel-node ./scripts/seed.js",
    "client:uglify": "mkdirp client/dist/js -p && uglifyjs client/src/js/*.js -m -c -o client/dist/js/main.min.js",
    "client:autoprefixer": "postcss -u autoprefixer -r client/dist/css/*",
    "client:scss": "node-sass --output-style compressed -o client/dist/css client/src/scss",
    "build:client:css": "run-s client:scss client:autoprefixer",
    "build:client:js": "run-s client:uglify",
    "build:client": "run-s build:client:*",
    "watch:client:css": "onchange \"src/scss\" -- run-s build:client:css",
    "watch:client:js": "onchange \"src/js\" -- run-s build:client:js",
    "watch:client": "run-p serve watch:client:*"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-async-to-generator": "^7.1.0",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "autoprefixer": "^9.4.3",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.11.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "postcss-cli": "^6.1.0",
    "run-p": "^0.0.0",
    "run-s": "^0.0.0",
    "uglify-es": "^3.3.9"
  }
}
